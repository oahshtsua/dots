[init]
	defaultBranch = main
[merge]
	conflictStyle = diff3
[diff]
	algorithm = histogram
[alias]
	a = add
	cma = commit --amend
	cm = commit
	co = checkout
	df = diff
	dfs = diff --staged
	lga = log --oneline --graph --all
	lg = log --oneline --graph
	rst = restore
	rsts = restore --staged
	s = status -s
	sta = stash apply
	std = stash drop
	stl = stash list
	stp = stash pop
	sts = stash save --include-untracked
	sw = switch
[core]
	editor = nvim
[gpg]
	format = ssh
[user]
	signingKey = ~/.ssh/signing_id_ed25519.pub
[gpg "ssh"]
	allowedSignersFile = ~/.config/git/allowed_signers
[commit]
	gpgSign = true
[push]
	autoSetupRemote = true
